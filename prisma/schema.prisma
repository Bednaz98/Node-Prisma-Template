generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Testing {
    id String @id
}

model User {
  id                    String                 @id @default(uuid())
  email                 String                 @unique
  password              String
  lastPasswordUpdate    BigInt                 @default(0)
  createdAt             BigInt
  userSystemProfiles    UserSystemProfiles?
  messagingToken        MessagingToken?
  userGlobalPreferences UserGlobalPreferences?
}

model UserSystemProfiles {
  id            User    @relation(fields: [profileID], references: [id], onDelete: Cascade)
  profileID     String  @id @unique
  firstName     String?
  lastName      String?
  username      String?
  recoveryEmail String?
  mobileNumber  String?
}

model UserGlobalPreferences {
  id              User   @relation(fields: [profileID], references: [id], onDelete: Cascade)
  profileID       String @id @unique
  preferencesData Json?
}

model MessagingToken {
  id        User   @relation(fields: [userID], references: [id], onDelete: Cascade)
  userID    String @id
  tokenData Json?
}

model General {
  id               String   @id
  displayTimeStamp String   @default("")
  timeStamp        BigInt
  title            String
  tags             String[]
  message          String?
}

model Verbose {
  id               String   @id @default(uuid())
  displayTimeStamp String   @default("")
  timeStamp        BigInt
  title            String
  tags             String[]
  message          String?
}

model Warning {
  id               String   @id
  displayTimeStamp String   @default("")
  timeStamp        BigInt
  title            String
  tags             String[]
  message          String?
}

model Error {
  id               String   @id
  displayTimeStamp String   @default("")
  timeStamp        BigInt
  title            String
  tags             String[]
  message          String?
}